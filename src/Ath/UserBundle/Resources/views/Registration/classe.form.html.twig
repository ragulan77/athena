{% extends "::base.html.twig" %}

{% block title %}Création classe{% endblock title%}

{% block content %}

  <div class="row">
			<div class="span4">
				<div class="well">
					<form action="{{ path('ath_classe_add') }}" method="post" {{ form_enctype(form) }}>
						{# Les erreurs générales du formulaire. #}
						{{ form_errors(form) }}
						<div>
							{{ form_label(form.name, "Nom de la classe") }}
							{{ form_errors(form.name) }}
							{{ form_widget(form.name) }}
						</div>
						{{ form_rest(form) }}
		    			<input type="submit" class="btn btn-primary" />
		  			</form>
				</div>
				
				{% for flashMessage in app.session.flashbag.get('notice') %}
    				<div class="flash-notice">
        				{{ flashMessage }}
    				</div>
				{% endfor %}
			</div>
			<div class="span8">
				<h1>Classes</h1>
				<ul>
    				{% for classe in listeClasse %}
        			<li>
        				<a href="{{ path('ath_classe_edit',{id: classe.id}) }}">{{ classe.name }}</a> 
        				<a href="{{ path('ath_classe_del',{id: classe.id}) }}">
        					<span class="glyphicon glyphicon-trash"></span>
        				</a>
        			</li>
    				{% endfor %}
				</ul>
			</div>
</div>

{% endblock content %}

{% block nav_right_links %}
  <a href="#" class="list-group-item">Link</a>
  <a href="#" class="list-group-item">Link</a>
{% endblock nav_right_links %}

